@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Department
@using UniversityRegistrar.Models;

<h2>The @Html.DisplayFor(model => model.DepartmentName) Department:</h2>
<h3>Courses:</h3>
@if (@Model.Courses.Count == 0)
{
  <h4>This Department has no active courses</h4>
}
else
{
  <ul>
  @foreach (Course course in Model.Courses)
  {
    <li>@Html.ActionLink($"{course.CourseName}", "Details", "Courses", new {id = course.CourseId })
    </li>
  }
  </ul>
}
