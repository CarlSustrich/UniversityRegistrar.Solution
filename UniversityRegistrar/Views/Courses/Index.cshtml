@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

@if (Model.Count == 0)
{
  <h5>No Courses have been added</h5>
}
else
{
  <h2>Courses:</h2>
  <ul>
    @foreach (Course course in Model)
    {
      <li>@Html.ActionLink($"{course.Department.DepartmentName} {course.CourseName}", "Details", new { id = course.CourseId})</li>
    }
  </ul>
}
